<commands>
	<command kind="async" opcode="0x01" mnemonic="MC_DrivingConfiguration">
		<comment>Configure forward command</comment>
		<args>
			<arg name="CommandConfiguration" type="ENUM">
				<enum name ="CommandList">
					<item name="FORWARD_CFG" />
					<item name="REVERSE_CFG" />
					<item name="LEFT_CFG" />
					<item name="RIGHT_CFG" />
				</enum>
			</arg>
			<arg name="Parameter" type="ENUM" >
				<enum name="ParameterList" >
					<item name="DISTANCE" />
					<item name="SPEED" />
					<item name="ANGLE" />
				</enum>
			</arg>
			<arg type="U8" name="Value" />
		</args>
	</command>

	<command kind="async" opcode="0x02" mnemonic="MC_ExecuteDriving">
		<comment>Execute one configured command</comment>
		<args>
			<arg name="DrivingCommand" type="ENUM">
				<enum name="DriveCommandList">
					<item name="GO_FORWARD"/>
					<item name="GO_REVERSE"/>
					<item name="TURN_LEFT"/>
					<item name="TURN_RIGHT"/>
				</enum>
			</arg>
		</args>
	</command>

	<command kind="async" opcode="0x03" mnemonic="MC_TuningParameters">
		<comment>Contains all motor control parameters</comment>
		<args>
			<arg name="TuningParameter" type="ENUM">
				<enum name ="tuningParameterList" >
					<item name = "P_CURRENT" />
					<item name = "I_CURRENT" />
					<item name = "P_SPEED" />
					<item name = "I_SPEED" />
					<item name = "D_SPEED" />
					<item name = "P_POSITION" />
					<item name = "I_POSITION" />
					<item name = "D_POSITION" />
				</enum>
			</arg>
			<arg name="Value" type="U16" />
		</args>
	</command>

	<command kind="async" opcode="0x04" mnemonic="MC_AccelerationProfiles">
		<comment>Contains acceleration and deceleration profile</comment>
		<args>
			<arg name="AccelerationParameter" type="ENUM">
				<enum name="accelerationParameterList">
					<item name = "ACCELERATION" />
					<item name = "DECELERATION" />
				</enum>
			</arg>
			<arg name="Value" type="U16" />
		</args>
	</command>

	<command kind="async" opcode="0x05" mnemonic="MC_StallDetection">
	<comment> Enable / disable detection of motor stall </comment>
	<args>
		<arg name="motorStallEnable" type="ENUM">
			<enum name = "motorStallEnableList">
				<item name = "ENABLED" />
				<item name = "DISABLED" />
			</enum>
		</arg>
	</args>
	</command>

	<command kind="async" opcode="0x06" mnemonic="MC_PositionCounterReset">
		<comment> Reset position counter </comment>
		<args>
			<arg name="ResetPositionCounter" type="U8" />
		</args>
	</command>
</commands>