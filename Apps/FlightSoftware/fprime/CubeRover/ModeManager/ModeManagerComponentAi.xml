<component name="ModeManager" kind="active" namespace="CubeRover">

    <import_port_type>Fw/Log/LogPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdRegPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdResponsePortAi.xml</import_port_type>

    <import_port_type>Svc/Fatal/FatalEventPortAi.xml</import_port_type>
    <import_port_type>Svc/Ping/PingPortAi.xml</import_port_type>

    <import_port_type>CubeRover/CubeRoverPorts/OperationModePortAi.xml</import_port_type>

    <import_dictionary>CubeRover/ModeManager/Commands.xml</import_dictionary>
    <import_dictionary>CubeRover/ModeManager/Events.xml</import_dictionary>
    <!-- <import_dictionary>CubeRover/ModeManager/Fatals.xml</import_dictionary> -->
    
    <comment>A component for managing the state machine</comment>

    <ports>
        <port name="logOut" data_type="Fw::Log"  kind="output" role="LogEvent"    max_number="1">
        </port>

        <port name="cmdRegOut" data_type="Fw::CmdReg"  kind="output" role="CmdRegistration"    max_number="1">
        </port>
        <port name="cmdIn" data_type="Fw::Cmd"  kind="input" role="Cmd"    max_number="1">
        </port>
        <port name="cmdResponseOut" data_type="Fw::CmdResponse"  kind="output" role="CmdResponse"    max_number="1">
        </port>

        <port name="FatalReceive" data_type="Svc::FatalEvent" kind="sync_input" >
        </port>

        <port name="pingIn" data_type="Svc::Ping" kind="async_input"  max_number = "1">
        </port>
        <port name="pingOut" data_type="Svc::Ping" kind="output"  max_number = "1">
        </port>

        <port name="controlMode" data_type="CubeRover::OperationMode" kind="sync_input" max_number="5">
        </port>
        <port name="currentMode" data_type="CubeRover::OperationMode" kind="output" max_number="5">
        </port>
    </ports>

</component>

